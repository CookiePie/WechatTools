<view>
  <view class="userProfile">
    <view class="avatar-image">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class="avatar-nickname">
      <open-data type="userNickName"></open-data>
    </view>
  </view>

  <!--
  <button bindtap="getUserProfile"></button>
  -->
  <form catchsubmit="formSubmit" catchreset="formReset">
    <view wx:if="{{!hasLogin}}"class="input-container">

      <view class="intro-text">
        <text>
          第一次使用请输入学号、密码，后续将自动登录
        </text>
      </view>

      <view class="input-container">
        <view class="input-label">
          <text>请输入学号：</text>
        </view>
        <view class="input-word">
          <input name="userid" type="number" />
        </view>
      </view>

      <view class="input-container">  
        <view class="input-label">
          <text>请输入密码：</text>
        </view>
        <view class="input-word">
          <input type="text" name="userpass" password="True"/>
        </view>
        {{userid}}
      </view>

      <view class="btn-area">
        <button style="margin: 30rpx 0;width: 200rpx;height: 100rpx" type="primary" plain="True" formType="submit">提交</button>
        <button style="margin: 30rpx 0;width: 200rpx;height: 100rpx" formType="reset">重置</button>
      </view>

    </view>
  </form> 
</view>